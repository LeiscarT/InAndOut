@model InAndOut.Models.ExpenseType

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
          
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                 
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-controller="ExpenseType" asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-outline-info w-75" value="Update" />
                        </div>
                    </div>
                </div>


            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }